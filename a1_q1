#include<iostream>

using namespace std;

int main()
{
    int n,row,col;
    cin>>n>>row>>col;
    for(int i=1;i<=row;i++){
        for(int j=1;j<=col;j++){
            if( i==1 | i==row | j==n+1-i){
            cout<<"*";
            }
            else {
            cout<<" "; 
            }
            
        }
        cout<<endl;
    }
    return 0; 
}

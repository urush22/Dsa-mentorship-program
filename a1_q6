#include <iostream>

using namespace std;

int main(){
    int i;
    //i is the number
    cout<<"enter the number which you want to reverse: ",i;
    cin>>i;
    int reverse=0;
    while(i>0){
    int lastdigit=i%10;
    //after dividing any number by 10 will get the which is at the ones place
    //while reversing the number the lastdigit goes to the  front
    reverse=reverse*10 + lastdigit;
    i=i/10;
    }
    cout<<"the reverse number is :"<<reverse<<endl;
    return 0;
}
